{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node",
            "@types/jest"
        ],
        "target": "ES6",
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es2019"
        ],
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        // "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        // "paths": {
        //     "@/*": ["./src/*"],
        //     "@/assets/*": ["./assets/*"]
        //   },
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}